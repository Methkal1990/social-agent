# X (Twitter) API Credentials
# Get these from https://developer.twitter.com/en/portal/dashboard
X_API_KEY=your_api_key_here
X_API_SECRET=your_api_secret_here
X_ACCESS_TOKEN=your_access_token_here
X_ACCESS_TOKEN_SECRET=your_access_token_secret_here

# X API Sandbox Credentials (optional, for testing)
X_SANDBOX_API_KEY=
X_SANDBOX_API_SECRET=
X_SANDBOX_ACCESS_TOKEN=
X_SANDBOX_ACCESS_TOKEN_SECRET=

# OpenRouter API Key
# Get this from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application Settings
LOG_LEVEL=info
CONFIG_DIR=~/.social-agent/config
DATA_DIR=~/.social-agent/data

# Optional: Timezone (defaults to system timezone)
# TZ=America/New_York
